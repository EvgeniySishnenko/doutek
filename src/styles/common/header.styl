.header 
    min-width 375px
    width 100%
    height 94px
    background-color blue
.container_header
    height 100%
    display flex
    justify-content space-between
    align-items center
.menu
    +adapt(900px)
        display none
.menu__list
    display flex
.menu__item
    margin-left 20px
    &:first-child
        margin-left 0
.menu__link
    font(ibm_R, 15px, white)
    line-height normal 
    letter-spacing 0.03em
    tran(color)
    &:hover
        color #466AAA
.header__user-auth
    display flex
    align-items center
    height 94px
    +adapt(900px)
        display none
.header__user-pic
    width 60px
.header__user-img
    display block
    max-width 100%
    border-radius 50%
.header__user-name
    font(ibm_R, 15px, white)
    letter-spacing 0.03em
    line-height 17px
.header__user__list
    height 25px
    display flex
    align-items center
    margin-top 10px
.header__user__item 
    background-color gray
    padding 0 10px
    height 100%
    display flex
    align-items center
    font(ibm_B, 13px, blue)
    line-height 17px
    letter-spacing 0.03em
    &:first-child
        border-top-left-radius 100px
        border-bottom-left-radius 100px
        border-right 1px solid darken(gray, 30%)
    &:last-child
        border-top-right-radius 100px
        border-bottom-right-radius 100px
.header__user__num
    margin-right 5px
.header__user__svg
    width 17px
    height 17px
    fill blue
.menu__mobile-btn
    display none
    width 20px
    cursor pointer
    +adapt(900px)
        display block
.mobile-btn__line1,
.mobile-btn__line2,
.mobile-btn__line3
    width 100%
    height 3px
    margin-top 3px
    background-color white
    -webkit-border-radius 10px
    border-radius 10px
.mobile-btn__line1
    margin-top 0